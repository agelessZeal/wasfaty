<!DOCTYPE html>
<html lang="en">

<%- include ../frontend/layouts/header.ejs %>

<body>

<div class="container">
    <div class="offset-lg-2 col-lg-8">
        <div class="row">
            <div class="offset-lg-2 col-lg-8">
                <form   method="post" action="/auth/reset_password" class="ws-login-form">
                    <div class="row">
                        <div class="offset-lg-2 col-lg-8 offset-md-2 col-md-8">
                            <a href="/">
                                <img src="/assets/img/wasfaty_logo_color.png" alt="wasfaty">
                            </a>
                            <% if(error && error.length > 0){ %>
                                <div class="alert alert-danger">
                                    <%= error %>
                                </div>
                            <% } else if(success && success.length > 0 ){ %>
                                <div class="alert alert-success">
                                    <%= success %>
                                </div>
                            <% } %>
                            <div class="form-group text-left">
                                <label for="email"><%= i18n.__("Email") %></label>
                                <input class="form-control" name="email" type="email" required id="email">
                            </div>
                            <div class="login-register-btns">
                                <button class="btn register-submit-btn">
                                    <div>
                                        <%= i18n.__("Reset Password") %>
                                    </div>
                                </button>
                            </div>
                            <p class="have-already-account"><a href="/auth/login"><%= i18n.__("Back to Login") %></a></p>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<%- include ../frontend/layouts/footer.ejs %>

</body>
</html>
