<!DOCTYPE html>
<html lang="en">

<%- include ../frontend/layouts/header.ejs %>

<body>

<div class="container">
    <div class="offset-lg-2 col-lg-8">
        <div class="row">
            <div class="offset-lg-2 col-lg-8">
                <form  method="post" action="/auth/register" class="ws-login-form">
                    <div class="row">
                        <div class="offset-lg-2 col-lg-8 offset-md-2 col-md-8">
                            <a href="/">
                                <img src="/assets/img/wasfaty_logo_color.png" alt="wasfaty">
                            </a>
                            <% if(error && error.length > 0){ %>
                                <div class="alert alert-danger">
                                    <%= error %>
                                </div>
                            <% } else if(success && success.length > 0 ){ %>
                                <div class="alert alert-success">
                                    <%= success %>
                                </div>
                            <% } %>
                            <div class="form-group text-left">
                                <label for="email">Email</label>
                                <input class="form-control" name="email" type="email" required id="email">
                            </div>
                            <div class="form-group text-left">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" class="form-control" required>
                            </div>
                            <div class="form-group text-left">
                                <label for="phone">Mobile Number</label>
                                <input type="text" name="phone" id="phone" class="form-control" required>
                            </div>
                            <div class="form-group text-left">
                                <label for="role">Account Type</label>
                                <select  name="role" id="role" class="form-control">
                                    <option value="Company">Company</option>
                                    <option value="Pharmacy">Pharmacy</option>
                                    <option value="Salesman">Salesman</option>
                                    <option value="Doctor">Doctor</option>
                                    <option value="Client">Client</option>
                                    <option value="Driver">Driver</option>
                                </select>
                            </div>
                            <div class="form-group text-left terms-service-agree">
                                <label class="checkbox">
                                    <input type="checkbox" required/>
                                    I have read and agree the Terms & Conditions
                                </label>
                            </div>
                            <div class="login-register-btns">
                                <button class="btn register-submit-btn">
                                    <div>
                                        SIGNUP
                                    </div>
                                </button>
                            </div>
                            <p class="have-already-account">Already have an account? <a href="/auth/login">Login</a></p>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<%- include ../frontend/layouts/footer.ejs %>

</body>
</html>
