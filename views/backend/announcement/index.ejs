<!DOCTYPE html>
<html lang="en">

<%- include ../layouts/header.ejs %>

<%
var formatTime = function (ts) {
    var date = new Date(ts);
    // Years part from the timestamp
    var year = date.getFullYear();
    // Month part from the timestamp
    var month = date.getMonth() + 1;
    if (month < 10) {
        month = '0' + month;
    }
    // Day part from the timestamp
    var day = date.getDate();
    if (day < 10) {
        day = '0' + day;
    }
    return year + "-" + month + "-" + day;
}
%>

<body>
<div class="main-wrapper">
    <%- include ../layouts/menubar.ejs %>
    <%- include ../layouts/sidebar.ejs %>
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">Announcement</h4>
                </div>
                <% if(session.user.role == 'Admin') { %>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="/announcement/add" class="btn btn btn-primary btn-rounded float-right">
                            <i class="fa fa-plus"></i> Add New Announcement
                        </a>
                    </div>
                <% } %>
                <% if(error && error.length > 0) { %>
                    <div class="col-sm-12">
                        <div class="alert alert-danger" role="alert">
                            <strong>Error!</strong> <%= error %>
                        </div>
                    </div>
                <% } %>
                <% if(success && success.length > 0) { %>
                    <div class="col-sm-12">
                        <div class="alert alert-success" role="alert">
                            <strong>Success!</strong> <%= success %>
                        </div>
                    </div>
                <% } %>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-border table-striped custom-table datatable mb-0">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>UserType</th>
                                <th>CreatedAt</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(var i = 0; i < news_list.length; i++) { %>
                                <tr>
                                    <td><%= news_list[i].annId %></td>
                                    <td><%= news_list[i].title %></td>
                                    <td><%= (news_list[i].description.length > 50) ? news_list[i].description.substr(0, 50) + '...':news_list[i].description %></td>
                                    <td><%= (news_list[i].userType) ? news_list[i].userType : 'All' %></td>
                                    <td><%= formatTime(news_list[i].createdAt) %></td>
                                    <td>
                                        <% if(session.user.role == 'Admin') { %>
                                            <a href="/announcement/edit/<%= news_list[i].annId %>" class="btn btn-primary">Edit</a>
                                            <a href="#" onclick="onDeleteMessage('<%= news_list[i].annId %>')"
                                               class="btn btn-danger">Delete</a>
                                        <% } else { %>
                                            <a href="/announcement/edit/<%= news_list[i].annId %>" class="btn btn-primary">View Details</a>
                                        <% } %>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ../layouts/footer.ejs %>
<script>
    function onDeleteMessage(msgId) {
        swal({
            title: "Are you sure to delete this record?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    location.href = '/announcement/delete/' + msgId
                    //
                } else {
                    console.log('close modal');
                }
            });
    }
</script>
</body>
</html>
