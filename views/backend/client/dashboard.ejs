<!DOCTYPE html>
<html lang="en">

<%- include ../layouts/header.ejs %>
<%
var formatTime = function (ts) {
    var date = new Date(ts);
    // Years part from the timestamp
    var year = date.getFullYear();
    // Month part from the timestamp
    var month = date.getMonth() + 1;
    if (month < 10) {
        month = '0' + month;
    }
    // Day part from the timestamp
    var day = date.getDate();
    if (day < 10) {
        day = '0' + day;
    }
    return month + "/" + day + "/" + year;
}
%>
<style>
    .dataTables_length {
        display: none;
    }
    div.dt-buttons {
        display: none;
    }
    .dataTables_filter {
        display: none;
    }
</style>
<body>
<div class="main-wrapper">
    <%- include ../layouts/menubar.ejs %>
    <%- include ../layouts/sidebar.ejs %>
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                    <div class="dash-widget">
                        <span class="dash-widget-bg3"><i class="fa fa-barcode" aria-hidden="true"></i></span>
                        <div class="dash-widget-info text-right">
                            <h3><%= totalLP %></h3>
                            <span class="widget-title3">Loyalty Point <i class="fa fa-check" aria-hidden="true"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                    <div class="dash-widget">
                        <span class="dash-widget-bg4"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i></span>
                        <div class="dash-widget-info text-right">
                            <h3><%= todayOrders %></h3>
                            <span class="widget-title4">Today All Orders <i class="fa fa-check" aria-hidden="true"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                    <div class="dash-widget">
                        <span class="dash-widget-bg1"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i></span>
                        <div class="dash-widget-info text-right">
                            <h3><%= totalOrders %></h3>
                            <span class="widget-title1">All Orders <i class="fa fa-check" aria-hidden="true"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title d-inline-block">New Orders </h4>
                            <a href="/client/orders" class="btn btn-primary float-right">View all</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-border table-striped custom-table datatable mb-0">
                                    <thead>
                                    <tr>
                                        <th>Doctor</th>
                                        <th>Mobile</th>
                                        <th>Remark</th>
                                        <th>OrderType</th>
                                        <th>Status</th>
                                        <th>CreatedAt</th>
                                        <th>UpdatedAt</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% for(var i = 0; i < data_list.length; i++) { %>
                                        <tr>
                                            <td><%= data_list[i].doctorEmail %></td>
                                            <td><%= data_list[i].clientPhone %></td>
                                            <td><%= data_list[i].remark %></td>
                                            <td>
                                                <% if(data_list[i].orderType == 'Rejected') { %>
                                                    <span class="custom-badge status-red">Rejected</span>
                                                <% } else  { %>
                                                    <span class="custom-badge status-green"><%= data_list[i].orderType %></span>
                                                <% } %>
                                            </td>
                                            <td><%= data_list[i].status %></td>
                                            <td><%= formatTime(data_list[i].createdAt) %></td>
                                            <td><%= (data_list[i].updatedAt) ? formatTime(data_list[i].updatedAt) : '' %></td>
                                            <td class="text-right">
                                                <a class="btn btn-success"
                                                   href="/orders/view/<%= data_list[i].orderId %>">
                                                    <i class="fa fa-eye m-r-5"></i> View Order
                                                </a>
                                            </td>
                                        </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="sidebar-overlay" data-reff=""></div>

<%- include ../layouts/footer.ejs %>

</body>
</html>
