<!DOCTYPE html>
<html lang="en">

<%- include ../layouts/header.ejs %>
<%
var formatTime = function (ts) {
    var date = new Date(ts);
    // Years part from the timestamp
    var year = date.getFullYear();
    // Month part from the timestamp
    var month = date.getMonth() + 1;
    if (month<10){ month = '0' + month;}
    // Day part from the timestamp
    var day = date.getDate();
    if (day<10){ day = '0' + day;}
    return year+"-"+month + "-"+day;
}
%>
<body>
<div class="main-wrapper">
    <%- include ../layouts/menubar.ejs %>
    <%- include ../layouts/sidebar.ejs %>
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">Company List</h4>
                </div>
                <div class="col-sm-8 col-9 text-right m-b-20">
                    <a href="/admin/member/add?s=Company" class="btn btn btn-primary btn-rounded float-right">
                        <i class="fa fa-plus"></i> Add Company
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-border table-striped custom-table datatable mb-0">
                            <thead>
                            <tr>
                                <th>Name(EN/AR)</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Company</th>
                                <th>Country</th>
                                <th>City</th>
                                <th>Status</th>
                                <th>CreatedAt</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(var i = 0; i<users.length; i++) {  %>
                                <tr>
                                    <td>
                                        <img width="28" height="28" src="<%= (users[i].pic)?users[i].pic:'/assets/img/user.jpg'; %>" class="rounded-circle m-r-5" alt="">
                                        <%= (getLocale()== 'en')? users[i].nameEn: users[i].nameAr %>
                                    </td>
                                    <td><%= users[i].email %></td>
                                    <td><%= users[i].phone %></td>
                                    <td><%= users[i].companyName %></td>
                                    <td><%= users[i].country %></td>
                                    <td><%= users[i].city %></td>
                                    <td>
                                        <button type="button" class="btn btn-sm <%= (users[i].status == "Enabled")?"btn-primary":"btn-secondary" %>"><%= (users[i].status)?users[i].status:'Disabled' %></button>
                                    </td>
                                    <td><%= formatTime(users[i].createdAt) %></td>
                                    <td>
                                        <% if(session.user.role == 'Admin') {  %>
                                            <a class="btn btn-primary" href="/users/profile?m=edit&id=<%= users[i]._id %>"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                            <a class="btn btn-danger ws-delete-link"
                                               href="#"
                                               data-msg="Company"
                                               data-url="/users/delete/<%= users[i]._id %>"
                                               data-toggle="modal"
                                               data-target="#delete_box">
                                                <i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                        <% } else  {  %>
                                            <a class="btn btn-primary" href="/users/profile?m=view&id=<%= users[i]._id %>"><i class="fa fa-eye m-r-5"></i> View</a>
                                        <% } %>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ../layouts/footer.ejs %>

</body>
</html>
