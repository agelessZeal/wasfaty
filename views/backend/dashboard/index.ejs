<!DOCTYPE html>
<html lang="en">

<%- include ../layouts/header.ejs %>
<%
var lang = getLocale();
var suffix = (lang == 'ar') ? 'Ar' : 'En';
 %>
<body>
<div class="main-wrapper">
    <%- include ../layouts/menubar.ejs %>
    <%- include ../layouts/sidebar.ejs %>
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                    <div class="dash-widget">
                        <span class="dash-widget-bg1"><i class="fa fa-stethoscope" aria-hidden="true"></i></span>
                        <div class="dash-widget-info text-right">
                            <h3><%= doctorsCount %></h3>
                            <span class="widget-title1">Doctors <i class="fa fa-check" aria-hidden="true"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                    <div class="dash-widget">
                        <span class="dash-widget-bg2"><i class="fa fa-user-o"></i></span>
                        <div class="dash-widget-info text-right">
                            <h3><%= companyCount %></h3>
                            <span class="widget-title2">Companies <i class="fa fa-check" aria-hidden="true"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                    <div class="dash-widget">
                        <span class="dash-widget-bg3"><i class="fa fa-user-md" aria-hidden="true"></i></span>
                        <div class="dash-widget-info text-right">
                            <h3><%= pharmacyCount %></h3>
                            <span class="widget-title3">Pharmacies <i class="fa fa-check" aria-hidden="true"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                    <div class="dash-widget">
                        <span class="dash-widget-bg4"><i class="fa fa-heartbeat" aria-hidden="true"></i></span>
                        <div class="dash-widget-info text-right">
                            <h3><%= ordersCount %></h3>
                            <span class="widget-title4">Total Closed Orders <i class="fa fa-check" aria-hidden="true"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" >
                <div class="col-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="chart-title">
                                <h4>Monthly Completed Orders</h4>
                            </div>
                            <canvas id="total_commissions_graph"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="chart-title">
                                <h4>Monthly Registered Clients</h4>
                            </div>
                            <canvas id="client_bargraph"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title d-inline-block">New Clients </h4> <a href="/admin/client" class="btn btn-primary float-right">View all</a>
                        </div>
                        <div class="card-block">
                            <div class="table-responsive">
                                <table class="table mb-0 new-patient-table">
                                    <tbody>
                                        <% for(var i = 0; i < newClients.length; i++) {  %>
                                            <tr>
                                                <td>
                                                    <img width="28" height="28" class="rounded-circle" src="<%= newClients[i].pic %>" alt="">
                                                    <h2><%= newClients[i]['name' + suffix ] %></h2>
                                                </td>
                                                <td><%= newClients[i].email %></td>
                                                <td><%= newClients[i].phone %></td>
                                                <td>
                                                    <a class="btn btn-primary btn-primary-one float-right" href="users/profile?m=edit&id=<%= newClients[i]._id %>">View</a>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title d-inline-block">Doctors </h4>
                            <a href="/admin/doctor" class="btn btn-primary float-right">View all</a>
                        </div>
                        <div class="card-block">
                            <div class="table-responsive">
                                <table class="table mb-0 new-patient-table">
                                    <tbody>
                                    <% for(var i = 0; i < doctors.length; i++) {  %>
                                        <tr>
                                            <td>
                                                <img width="28" height="28" class="rounded-circle" src="<%= doctors[i].pic %>" alt="">
                                                <h2><%= doctors[i]['name' + suffix ] %></h2>
                                            </td>
                                            <td><%= doctors[i].email %></td>
                                            <td><%= doctors[i].phone %></td>
                                            <td>
                                                <a class="btn btn-primary btn-primary-one float-right" href="users/profile?m=edit&id=<%= doctors[i]._id %>">View</a>
                                            </td>
                                        </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
</div>

<div class="sidebar-overlay" data-reff=""></div>

<%- include ../layouts/footer.ejs %>

<script>
    // Line Chart
    var commGraphData = JSON.parse('<%- JSON.stringify(commGraphData) %>');
    var clientGraphData = JSON.parse('<%- JSON.stringify(clientGraphData) %>');
    var totalCommissionChartData = {
        labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
        datasets: [{
            label: "Closed Orders",
            backgroundColor: "rgba(0, 158, 251, 0.5)",
            // data: [100, 70, 20, 100, 120, 50, 70, 50, 50, 100, 50, 90]
            data: commGraphData
        }]
    };

    if (document.getElementById('total_commissions_graph')) {
        var totalcommctx = document.getElementById('total_commissions_graph').getContext('2d');
        window.myLine = new Chart(totalcommctx, {
            type: 'line',
            data: totalCommissionChartData,
            options: {
                responsive: true,
                legend: {
                    display: false,
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                }
            }
        });
    }

    var clientChartData = {
        labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
        datasets: [{
            label: "Client count",
            backgroundColor: "rgba(255, 188, 53, 0.5)",
            // data: [100, 70, 20, 100, 120, 50, 70, 50, 50, 100, 50, 90]
            data: clientGraphData
        }]
    };

    if (document.getElementById('client_bargraph')) {
        var doctorLinectx = document.getElementById('client_bargraph').getContext('2d');
        window.myLine = new Chart(doctorLinectx, {
            type: 'line',
            data: clientChartData,
            options: {
                responsive: true,
                legend: {
                    display: false,
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                }
            }
        });
    }
</script>

</body>
</html>
