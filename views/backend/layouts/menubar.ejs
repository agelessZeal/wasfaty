<div class="header">
    <div class="header-left">
        <a href="/" class="logo">
            <img src="/assets/img/logo.png" alt="">
        </a>
    </div>
    <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
    <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
    <ul class="nav user-menu float-right">
        <li class="nav-item dropdown has-arrow">
            <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                <i class="fa fa-globe"></i>
                <span><%= (getLocale() == 'en')? "English":"عربى" %></span>
            </a>
            <div class="dropdown-menu" id="lang-switch-btn">
                <a class="dropdown-item" href="/lang/en">English</a>
                <a class="dropdown-item" href="/lang/ar">عربى</a>
            </div>
        </li>
        <li class="nav-item dropdown has-arrow">
            <a href="#" class="nav-link user-link" data-toggle="dropdown">
                <span class="user-img">
                    <img class="rounded-circle"
                         src="<%= (session.user.pic)?session.user.pic:'/assets/img/user.jpg' %>" width="24"
                         alt="<%= (session.user.role) %>">
                    <span class="status online"></span>
                </span>
                <span><%= session.user.email %></span>
            </a>
        </li>
    </ul>
</div>
