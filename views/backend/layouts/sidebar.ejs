<% var menuList = menu[session.user.role]; %>
<div class="sidebar" id="sidebar">
    <div class="sidebar-inner slimscroll">
        <div id="sidebar-menu" class="sidebar-menu">
            <ul>
                <% if(session.user.isDoneProfile) {  %>
                    <% for(var i = 0; i<menuList.length; i++) {  %>
                        <% if(menuList[i].sub) {  %>
                            <li class="submenu">
                                <a href="#">
                                    <i class="<%= menuList[i].icon %>"></i>
                                    <span><%= menuList[i].name %></span> <span class="menu-arrow"></span>
                                </a>
                                <ul style="display: none;">
                                    <% for(var j = 0; j<menuList[i].children.length; j++) {  %>
                                        <li>
                                            <a href="<%= menuList[i].children[j].url %>"
                                               class="<%= (title == menuList[i].children[j].title)?'active':'' %>">
                                                <%= menuList[i].children[j].name %>
                                            </a>
                                        </li>
                                    <% } %>
                                </ul>
                            </li>
                        <% } else {  %>
                            <li class="<%= (menuList[i].title == title)?'active':'' %>">
                                <a href="<%= menuList[i].url %>">
                                    <i class="<%= menuList[i].icon %>"></i>
                                    <span><%= menuList[i].name %></span>
                                </a>
                            </li>
                        <% } %>
                    <% } %>
                <% } %>
                <li class="submenu">
                    <a href="#"><i class="fa fa-cog"></i> <span> Settings</span> <span class="menu-arrow"></span></a>
                    <ul style="display: none;">
                        <% if(session.user.isDoneProfile) { %>
                            <li><a class="<%= (title == 'View User Profile')?'active':'' %>" href="/user/profile?m=view">My Profile</a></li>
                            <li><a  class="<%= (title == 'Edit User Profile')?'active':'' %>" href="/user/profile?m=edit">Edit Profile</a></li>
                        <% } %>
                        <li><a  class="<%= (title == 'Change Password')?'active':'' %>" href="/user/change-password">Change Password</a></li>
                    </ul>
                </li>
                <li><a href="/auth/logout"><i class="fa fa-power-off"></i> <span>Logout</span></a></li>
            </ul>
        </div>
    </div>
</div>
