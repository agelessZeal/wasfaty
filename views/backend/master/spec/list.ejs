<!DOCTYPE html>
<html lang="en">

<%- include ../../layouts/header.ejs %>
<%
var formatTime = function (ts) {
    var date = new Date(ts);
    // Years part from the timestamp
    var year = date.getFullYear();
    // Month part from the timestamp
    var month = date.getMonth() + 1;
    if (month<10){ month = '0' + month;}
    // Day part from the timestamp
    var day = date.getDate();
    if (day<10){ day = '0' + day;}
    return year+"-"+month + "-"+day;
}
%>
<body>
<div class="main-wrapper">
    <%- include ../../layouts/menubar.ejs %>
    <%- include ../../layouts/sidebar.ejs %>
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title"><%= title %></h4>
                </div>
                <div class="col-sm-8 col-9 text-right m-b-20">
                    <a href="/admin/specialist/add" class="btn btn btn-primary btn-rounded float-right">
                        <i class="fa fa-plus"></i> Add Specialist
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-border table-striped custom-table datatable mb-0">
                            <thead>
                            <tr>
                                <th>No</th>
                                <th>Name(English)</th>
                                <th>Name(Arabic)</th>
                                <th>CreatedAt</th>
                                <th class="text-right">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(var i = 0; i<data_list.length; i++) {  %>
                                <tr>
                                    <td><%= (i+1) %></td>
                                    <td><%= data_list[i].name_en %></td>
                                    <td><%= data_list[i].name_ar %></td>
                                    <td><%= formatTime(data_list[i].createdAt) %></td>
                                    <td class="text-right">
                                        <a class="btn btn-primary" href="/admin/specialist/edit?id=<%= data_list[i].specId %>">
                                            <i class="fa fa-pencil m-r-5"></i> Edit
                                        </a>
                                        <a class="btn btn-danger  ws-delete-link"
                                           href="#"
                                           data-msg="Specialist"
                                           data-url="/specialist/delete/<%= data_list[i].specId %>"
                                           data-toggle="modal"
                                           data-target="#delete_box">
                                            <i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ../../layouts/footer.ejs %>

</body>
</html>
