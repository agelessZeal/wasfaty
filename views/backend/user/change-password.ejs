<!DOCTYPE html>
<html lang="en">

<%- include ../layouts/header.ejs %>

<body>
<div class="main-wrapper">
    <%- include ../layouts/menubar.ejs %>
    <%- include ../layouts/sidebar.ejs %>
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-lg-8">
                    <h4 class="page-title"><%= i18n.__("Change Password") %></h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <form action="/users/change-password" method="post">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-sm-8">
                                        <% if(error && error.length>0) {  %>
                                            <div class="alert alert-danger">
                                                <strong><%= i18n.__("Error!") %></strong> <%= i18n.__(error) %>
                                            </div>
                                        <% } %>
                                        <% if(success && success.length>0) {  %>
                                            <div class="alert alert-success">
                                                <strong><%= i18n.__("Success!") %></strong> <%= i18n.__(success) %>
                                            </div>
                                        <% } %>
                                        <div class="form-group">
                                            <label><%= i18n.__("New Password") %></label>
                                            <input class="form-control" type="text" name="password" required>
                                        </div>
                                        <div class="form-group random-password-group">
                                            <button class="btn btn-secondary" type="button" onclick="genRandomPassword(10)">
                                                <%= i18n.__("Generate") %>
                                            </button>
                                        </div>
                                        <div class="form-group random-password-group">
                                            <button class="btn btn-primary submit-btn"><%= i18n.__("Save") %></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ../layouts/footer.ejs %>

</body>
</html>
